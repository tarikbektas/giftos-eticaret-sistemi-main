<div class="page-content">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 grid-margin stdetch-card">
          <div class="card">
            <div class="card-body">
              <h6 class="card-title">Ürünler</h6>
              <a class="btn btn-outline-success" href="add-product" role="button">Yeni Ürün Ekle</a>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Görsel</th>
                      <th>Barkod</th>
                      <th>Ürün Adı</th>
                      <th>Kategori</th>
                      <th>Açıklama</th>
                      <th>Fiyat</th>
                      <th>#</th>
                    </tr>
                  </thead>
                  <% product.forEach(function(productitems) { %>
                  <tbody>
                
                    <td class="py-1"><img src="<%- productitems.urun_görsel  %>"></td>
                    <td><%=productitems.urun_barkod  %></td>
                    <td><%=productitems.urun_adi  %></td>
                    <td><%= productitems.prodcats.name %></td>
                    <td><input type="text" name="desc" class="form-control" value="<%=productitems.urun_desc  %>"></td>
                    <td><%=productitems.urun_fiyat  %></td>
                    <td style="display: flex;">
                        <a href="product-edit/<%= productitems._id  %>"> <button type="submit" class="btn btn-outline-danger btn-xs btn-flat show_confirm" style="margin-right: 1rem;" data-toggle="tooltip">Düzenle</button></a>

                        <form action="delete-product" method="post">
                            <input type="hidden" name="id" value="<%= productitems._id  %>">
                            <button type="submit" class="btn btn-outline-danger btn-xs btn-flat show_confirm">sil</button>
                        </form>
                        
                    </td>
                   
                  </tbody>
                  <% }); %>
                </table>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>